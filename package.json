{
  "name": "calendario-app",
  "version": "1.0.0",
  "description": "A web app for sharing iCalendar feeds with beautiful subscription pages",
  "main": "index.html",
  "scripts": {
    "dev": "node scripts/build.js development && npx http-server . -p 3000 -o --ext html",
    "start": "npx http-server . -p 3000 --ext html",
    "build": "node scripts/build.js production",
    "build:dev": "node scripts/build.js development",
    "deploy": "npm run build && fly deploy",
    "deploy:local": "npm run build:dev && npx http-server . -p 3000 -o --ext html",
    "lint": "echo 'No linting configured yet'"
  },
  "keywords": [
    "calendar",
    "icalendar",
    "ics",
    "events",
    "subscription"
  ],
  "author": "Pablo",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/calendario-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/calendario-app/issues"
  },
  "homepage": "https://github.com/your-username/calendario-app#readme"
}
